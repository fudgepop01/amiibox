{
	"exclude": ["node_modules"],

	"compilerOptions": {
 		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"downlevelIteration": true,
    "esModuleInterop": true,

		"lib": ["dom", "dom.iterable", "esnext", "scripthost"]
	}
}
